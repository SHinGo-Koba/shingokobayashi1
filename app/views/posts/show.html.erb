<div class="main posts-index">
  <div class="container">
    <div class="posts-each">
      <%= render "shared/post", post: @post %>
      <% if @comments %>
        <% @comments.each do |comment| %>
          <div class="posts-each-comment">
            <%= comment.comment %>
          </div>
        <% end %>
      <% end %>
      <%= form_for(@comment, url: post_comments_path(@post)) do |f| %>
        <div class="posts-each-input-comment">
          <%#= f.label "Comment on this post!" %>
          <%= f.text_field :comment %>
          <%= f.submit "Comment!" %>
        </div>
      <% end %>
      <% if current_user?(@post.user) %>
        <div class="posts-each-edit">
          <%= link_to "Delete", "/posts/#{@post.id}", method: :delete, data: {confirm: "Are you sure?"}, style: "font-size: 15px; color: rgba(0,0,0,0.6);" %> 
        </div>
      <% end %>
    </div>
  </div>
</div>