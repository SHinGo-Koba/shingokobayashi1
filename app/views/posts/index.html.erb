<div class="main posts-index">
  <div class="container">
  <% if @posts %>
    <% @posts.each do |post| %>
      <div class="posts-each">
        <%= render "shared/post", post: post %>
        <%= link_to("/posts/#{post.id}", class:"btn post-detail-link") %>
      </div>
    <% end %>
  <% end %>
  </div>
</div>