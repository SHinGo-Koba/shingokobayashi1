<div class="main posts-index">
  <div class="container">
  <% if @posts %>
    <% @posts.each do |post| %>
      <div class="posts-each">
        <%= link_to post_path(post), { class: "btn post-detail-link" } do %>
          <%= render "shared/post", post: post %> 
        <% end %>
      </div>
    <% end %>
  <% end %>
  </div>
</div>